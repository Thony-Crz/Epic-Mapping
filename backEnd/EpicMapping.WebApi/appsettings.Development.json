{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Key": "development-key-should-be-replaced-by-environment-variable-in-production-32chars",
    "Issuer": "EpicMappingApi",
    "Audience": "EpicMappingClient",
    "ExpirationHours": 8
  },
  "OAuth": {
    "AzureAd": {
      "ClientId": "development-client-id",
      "ClientSecret": "development-client-secret",
      "TenantId": "development-tenant-id",
      "Authority": "https://login.microsoftonline.com/development-tenant-id"
    }
  },
  "Security": {
    "RequireHttps": false,
    "AllowedOrigins": [
      "https://localhost:5173",
      "http://localhost:5173",
      "https://localhost:3000",
      "http://localhost:3000"
    ],
    "RateLimiting": {
      "RequestsPerMinute": 200,
      "TokenRequestsPerMinute": 50
    }
  }
}
